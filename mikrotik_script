
:local accessToken "token";
:local baseUrl "host/api/user/status";

:local checkUserDevice [/ip dhcp-server lease find mac-address="device_mac_address"]; 

:local userId 1;

:local userAtHome 0;
:if ( $checkUserDevice != "" ) do={
    :set userAtHome 1;
} 

:local fullUrlUser "$baseUrl\?token=$accessToken&username_id=$userId&status=$userAtHome";

/tool fetch url=$fullUrlUser mode=http;

